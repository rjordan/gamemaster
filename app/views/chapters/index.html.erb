<div id="streamlined_list">
  <table class="sl_list">
    <thead>
      <tr>
        <td>Name</td>
        </tr>
      </thead>
      <tbody>
        <% if @chapters.empty? %>
          <tr class="odd">
            <td colspan="1">
              <div class="list_empty_message">
                No records to display!
              </div>
            </td>
          </tr>
        <% end %>
        <% for chapter in @chapters %>
          <tr class="<%= cycle "even", "odd" -%>">
            <td><%= link_to chapter.name, story_chapter_url(chapter.story, chapter) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  
  </div>
