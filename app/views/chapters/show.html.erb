<div id="content">
<h2><%= link_to @chapter.story.campaign.name, campaign_url(@chapter.story.campaign) %>:<%= link_to @chapter.story.name, campaign_story_url(@chapter.story.campaign, @chapter.story) %>:<%= @chapter.name %></h2>
<p>
<% if @chapter.public %>
  <span style="color:green">This chapter has been revealed.</span>
<% else %>
  <span style="color:red">This chapter is for the GM's eyes only!</span>
<% end %>
</p>

<p>
<div id="section_heading">
<span>Public Description</span>
<hr/>
</div>
<%= @chapter.public_description -%>
</p>


<% if @chapter.story.campaign.user_id == session[:user_id] %>
<br/>
<p>
  <div id="section_heading">
    <span>GM's Description</span>
  <hr/>
 </div>
<%= @chapter.private_description -%>
</p>
<% end %>

<p>
<div id="section_heading">
  <span>Actors (NPC's)</span>
  <%= link_to "New", {}, :class=>'button' %>
<hr/>
  </div></p>

<p>
<div id="section_heading">
  <span>Props (Items)</span>
  <%= link_to "New", {}, :class=>'button' %>
<hr/>
  </div></p>

<br/>
</div>
<p>
<%= link_to 'Edit', edit_story_chapter_url(@chapter.story, @chapter) %> 
</p>
