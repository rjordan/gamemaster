<div class="post">
  <div class="post_header">
      
      <div class="timestamp">
       <%=show_short.created_at %>
       <%= image_tag( "page_edit.png") %><%= image_tag("page_remove.png") %>
      </div>
      
        <div class="header_image">
            <%= render_gravatar show_short.user %>
            <%= show_short.user.nickname %>
        </div>
        <div>
          <%= link_to show_short.title, forum_post_url(show_short.forum, show_short) %>
        </div>

  </div>
  <div class="post_body">
    <%= show_short.contents %>
  </div>
</div>