<fieldset>
  <%= form.hidden_field :campaign_id %>
  <div class="form-group">
    <%= form.label :name, class: 'control-label col-sm-2 required' %>
    <div class="col-sm-10">
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <% if @resource.new_record? %>
    <div class="form-group">
      <%= form.label :resource_type, class: 'control-label col-sm-2 required' %>
      <div class="col-sm-10">
        <%= form.select :resource_type, CampaignResource::ResourceTypes, {}, class: 'form-control' %>
      </div>
    </div>
  <% else %>
    <%= form.hidden_field :resource_type %>
  <% end %>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label>
          <%= form.check_box :public %>
          <%= t(:revealed) %>
        </label>
      </div>
    </div>
  </div>


  <ul class="nav nav-tabs">
    <li class="active"><a href="#public_description" data-toggle="tab">Public Description</a></li>
    <% if @resource.campaign.user == current_user %>
      <li><a href="#private_description" data-toggle="tab">GM's Description</a></li>
    <% end %>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="public_description">
      <div class="form-group">
        <%= form.label :public_description, class: 'control-label col-sm-2 required' %>
        <div class="col-sm-10">
          <%= form.text_area :public_description, class: 'form-control markItUp' %>
        </div>
      </div>
    </div>
    <div class="tab-pane" id="private_description">
      <div class="form-group">
        <%= form.label :private_description, class: 'control-label col-sm-2 required' %>
        <div class="col-sm-10">
          <%= form.text_area :private_description, class: 'form-control markItUp' %>
        </div>
      </div>
    </div>
  </div>
</fieldset>
